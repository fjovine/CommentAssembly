<UserControl x:Class="CommentAssembly.PropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommentAssembly"
             mc:Ignorable="d" >
    <GroupBox Header="Properties">
        <StackPanel>
            <CheckBox Content="Keep On Top"  />
            <CheckBox Content="Save Window size and position on exit"  />
            <CheckBox Content="Close window automatically" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Closing time (s) "/>
                <TextBox Width="50" Margin="5,2,5,2"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
